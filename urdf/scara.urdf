<?xml version="1.0"?>
<robot name="scara">

  <!-- Constants for robot dimensions -->
  <property name="PI" value="3.1415926535897931"/>
  <property name="width" value="0.1" /> <!-- Square dimensions (widthxwidth) of beams -->
  <property name="height1" value="1" /> <!-- Link 1 -->
  <property name="height2" value="1" /> <!-- Link 2 -->
  <property name="height3" value="1" /> <!-- Link 3 -->

  <link name="base">
    <visual>
      <geometry>
        <cylinder length="0" radius="0"/>
      </geometry>
    </visual>
  </link>

  <link name="link1">
    <visual>
      <geometry>
        <cylinder length="${height1}" radius="${width}"/>
      </geometry>
      <origin rpy="0 0 ${-PI}" xyz="0 0 ${height1/2}"/>
    </visual>
  </link>

  <joint name="base_to_link1" type="continuous">
    <parent link="base"/>
    <child link="link1"/>
    <axis xyz="0 0 1"/>
    <origin xyz="0 0 0"/>
  </joint>

  <link name="link2">
    <visual>
      <geometry>
        <cylinder length="${height2}" radius="${width}"/>
      </geometry>
      <origin rpy="0 ${PI/2} 0" xyz="${height1/2} 0 ${height1}"/>
    </visual>
  </link>

  <joint name="link1_to_link2" type="fixed">
    <parent link="link1"/>
    <child link="link2"/>
  </joint>

</robot>