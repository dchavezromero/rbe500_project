<?xml version="1.0"?>
<robot name="scara">

  <!-- Constants for robot dimensions -->
  <property name="PI" value="3.1415926535897931"/>
  <property name="width" value="0.1" /> <!-- Square dimensions (widthxwidth) of beams -->
  <property name="height1" value="1" /> <!-- Link 1 -->
  <property name="height2" value="1" /> <!-- Link 2 -->
  <property name="height3" value="1" /> <!-- Link 3 -->
  <property name="prismatic_limit" value="1" /> <!-- Limit for prismatic joint -->

  <link name="base">
    <visual>
      <geometry>
        <cylinder length="0" radius="0"/>
      </geometry>
    </visual>
  </link>

  <link name="link1">
    <visual>
      <geometry>
        <cylinder length="${height1}" radius="${width}"/>
      </geometry>
      <origin rpy="0 0 ${-PI}" xyz="0 0 ${height1/2}"/>
    </visual>
  </link>

  <joint name="base_to_link1" type="revolute">
    <parent link="base"/>
    <child link="link1"/>
    <limit effort="1000.0" lower="${-PI}" upper="${PI}" velocity="0.5"/>
    <axis xyz="0 0 1"/>
    <origin xyz="0 0 0"/>
  </joint>

  <link name="link2">
    <visual>
      <geometry>
        <cylinder length="${height2}" radius="${width}"/>
      </geometry>
      <origin rpy="0 ${PI/2} 0" xyz="${height1/2} 0 0"/>
    </visual>
  </link>

  <joint name="link1_to_link2" type="fixed">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0 0 ${height1}"/>
  </joint>

  <link name="link3">
    <visual>
      <geometry>
        <cylinder length="${height3}" radius="${width}"/>
      </geometry>
      <origin rpy="0 ${PI/2} 0" xyz="${height2/2} 0 0"/>
    </visual>
  </link>

  <joint name="link2_to_link3" type="revolute">
    <parent link="link2"/>
    <child link="link3"/>
    <limit effort="1000.0" lower="${-PI}" upper="${PI}" velocity="0.5"/>
    <axis xyz="0 0 1"/>
    <origin xyz="${height2} 0 0"/>
  </joint>

  <link name="gripper_pole">
    <visual>
      <geometry>
        <cylinder length="0.2" radius="0.01"/>
      </geometry>
      <origin rpy="0 0 0 " xyz="0 0 0"/>
    </visual>
  </link>

  <joint name="gripper_extension" type="prismatic">
    <parent link="link3"/>
    <child link="gripper_pole"/>
    <limit effort="1000.0" lower="0" upper="${prismatic_limit}" velocity="0.5"/>
    <axis xyz="0 0 1"/>
    <origin rpy="${PI} 0 0" xyz="${height3} 0 0"/>
  </joint>


</robot>